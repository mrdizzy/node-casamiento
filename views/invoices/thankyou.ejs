<%- contentFor('inside_headtag') %>
<style type="text/css">
#loading_main_page_spinner {
  display: none;
}

body {
  height: 0;
}

.left_column {
  width: 30%;
}

#right_col {
  margin-left: 30%;
  width: 70%;
}

#thanks_svg {
  padding-bottom: 1em;
  padding-top: 2em;
  width: 150px;
  display: block;
  margin: 0 auto;
}

#cart {
  width: 45%;
  float: left;
  margin: 2%;
  border-radius: 10px;
  border: 1px dotted black;
}

#cart_list {
  margin: 0;
  padding: 0;
}

#cart td {
  vertical-align: top;
}

#height {
  height: 200px;
}

.thumb {
  background-color: <%=colours[0] %>;
  display: block;
  width: 100px;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

#cart_list td,
#cart_guest_names td {
  text-align: center;
  vertical-align: middle;
  border: 1px dotted grey;
  padding: 0.25em;
  font: normal 1.2em 'OS Light'
}

#questions_about {
  padding-top: 0;
  padding-left: 1.75em;
  padding-right: 1.75em;
  font-size: 1.2em;
  font-family: 'OS Light Italic';
  text-align: center;
}

#cart_guest_names td:hover {
  background-color: lightgrey;
}

#cart a {
  color: <%=colours[0] %>;
  text-decoration: underline;
}

table {
  border-collapse: collapse;
  padding: 0
}

#thanks_for_order {
  margin-bottom: 0.25em;
  opacity: 0.8;
  padding: 0.25em;
  text-align: center;
  font: normal 3em 'Josefin Slab';
}

#cart th,
#cart .header {
  border: 0;
  padding-left:1em;
  letter-spacing: 0;
  font: normal 0.9em 'OS Condensed';
  padding-bottom: 0;
  margin-bottom: 0;
  text-align:left;
  padding-top: 1em;
}

#items_in_cart {
  width: 50%;
  float: left;
}
.text {
  padding-left:2em;
  text-align:left;
  font:normal 1.1em 'OS Light';
}

/* Smartphone 
 ============================================================================================================
 ============================================================================================================
 ============================================================================================================
 ============================================================================================================
 ============================================================================================================*/

@media all and (min-width: 220px) and (max-width: 500px) {
  #thanks_svg {
    padding-top: 0.25em;
  }
  #thanks_for_order {
    font-size: 2.5em;
    margin-left: 1em;
    margin-right: 1em;
  }
  .left_column,
  #right_col,
  #cart {
    margin: 0;
    width: 100%;
    float: none;
  }
  #items_in_cart {
    width: 100%;
    float: none;
  }
  #height {
    display: none;
  }
}
 </style>

<%- contentFor('middle') %>  
  
<%- contentFor('main') %>

<%- contentFor('left') %>

  <div style="">
    <img src="/gfx/thanks.svg" id="thanks_svg" />
     <p id="thanks_for_order">Thank you for your order.</p>

     <p id="questions_about">If you have any questions then please do not hesitate to contact us on <a href="mailto:orders@casamiento.co.uk">orders@casamiento.co.uk</a></p>
     <div id="height"></div>
  </div>
  

<%- contentFor('right') %>

     <div id="items_in_cart">
        <table id="cart_list">
          <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th></th>
            <th>Total</th>
          </tr>
          
          <tr>
            <td><%= paypal.quantity %></td>
            <td><a href="/products/<%= _id %>/edit" style="color:<%= colours[0] %>;"><%= name %></a></td>
            <td>
              <a href="/products/<%= _id %>/edit"><img class="thumb" src="http://mrdizzy.cloudant.com/test_ebay/<%= product_id %>/thumb-2"></a>
            </td>

            <td>&pound;<%= paypal.amt %></td>
          </tr>
        </table>

        <div class="shell"></div>

        <h5 class="header">Guest names:</h5>
          <table id="cart_guest_names" style="border-collapse:collapse;"> 
          <% guests.forEach(function(guest) { %>
            <tr>
              <td contenteditable="true">
              <% if(guest[0]) { %> 
              <%= guest[0].name %> 
              <% } %>
              </td>
              <td  contenteditable="true">
              <% if(guest[1]) { %> 
              <%= guest[1].name %> 
              <% } %>
              </td>
            </tr>
            <% }) %>
          </table>


</div>
      <div id="cart">
  
        <h5 class="header">Deliver to:</h5>

        <div class="text">
          <%= paypal.shiptoname %><br/>
          <%= paypal.shiptostreet %><br/>
          <%= paypal.shiptocity %><br/>
          <%= paypal.shiptostate %><br/>
          <%= paypal.shiptozip %><br/>
          <%= paypal.shiptocountryname %><br/>
        </div>
        

        <h5 class="header">Order Number:</h5>
        <div class="text">
          <a href="/products/<%= _id %>/edit"><%= _id %></a>
        </div>
        
        <h5 class="header">Your email:</h5>
        <div class="text">
          <a href="mailto:<%= paypal.email %>" style="color:<%= colours[0] %>;"><%= paypal.email %></a>
        </div>
      </div>
    
<%- contentFor('javascripts') %>
