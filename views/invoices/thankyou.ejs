<%- contentFor('inside_headtag') %>
<style type="text/css">

 #loading_main_page_spinner { display:none; }
 
 body { height:0; }
 
  #cart_list {
    margin:0;
    padding:0;
  }
  #cart td { vertical-align:top; }
  #cart .thumb {
    background-color:<%= colours[0] %>;
    display:block;
    width:100px;
    border-top-left-radius:10px;
    border-bottom-right-radius:10px;
  }
    #cart_list td,
    #cart_guest_names td {
      text-align:center;
      vertical-align:middle;
      border:1px dotted grey;
      padding:0.25em;
      font:normal 1.2em 'OS Light'
    }
    #cart_guest_names td:hover {
      background-color:lightgrey;
    }
    #cart a {
      color: <%= colours[0] %>;
      text-decoration:underline;
    }
    #cart table {
      border-collapse:collapse;padding:0
    }
    #cart th,
      #cart .header {
      border:0;
      letter-spacing:0;
      font:normal 0.9em 'OS Condensed';
    }
 </style>

<%- contentFor('middle') %>  
  
<%- contentFor('main') %>

<%- contentFor('left') %>

<div id="cart" style="margin:1em;border-radius:10px;border:1px dotted black;">
  <table>
    <tr>
      <td style="border-right:1px dotted black;padding:0.5em;width:33%;font:normal 1em 'OS Light';">

        <h5 class="header">Deliver to:</h5>

        <div style="padding-left:1em;">
          <%= paypal.shiptoname %><br/>
          <%= paypal.shiptostreet %><br/>
          <%= paypal.shiptocity %><br/>
          <%= paypal.shiptostate %><br/>
          <%= paypal.shiptozip %><br/>
          <%= paypal.shiptocountryname %><br/>
        </div>
        
        

        <h5 class="header">Order Number:</h5>

        <a href="/products/<%= _id %>/edit"><%= _id %></a>

        <h5 class="header">Your email:</h5>

        <a href="mailto:<%= paypal.email %>" style="color:<%= colours[0] %>;"><%= paypal.email %></a>
      </td>

      <td style="padding:1em;">

        <table id="cart_list">
          <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th></th>
            <th>Total</th>
          </tr>
          
          <tr>
            <td><%= paypal.quantity %></td>
            <td><a href="/products/<%= _id %>/edit" style="color:<%= colours[0] %>;"><%= name %></a></td>
            <td>
              <a href="/products/<%= _id %>/edit"><img class="thumb" src="http://mrdizzy.cloudant.com/test_ebay/<%= product_id %>/thumb-2"></a>
            </td>

            <td>&pound;<%= paypal.amt %></td>
          </tr>
        </table>

        <div class="shell"></div>

        <h5 class="header">Guest names:</h5>
          <table id="cart_guest_names" style="border-collapse:collapse;"> 
          <% guests.forEach(function(guest) { %>
            <tr>
              <td contenteditable="true">
              <% if(guest[0]) { %> 
              <%= guest[0].name %> 
              <% } %>
              </td>
              <td  contenteditable="true">
              <% if(guest[1]) { %> 
              <%= guest[1].name %> 
              <% } %>
              </td>
            </tr>
            <% }) %>
          </table>
      </td>
    </tr>
  </table>

</div>

<%- contentFor('right') %>

  <div style="">
    <img src="/gfx/handshake1.svg" style="padding-bottom:1em;padding-top:2em;width:50px;opacity:0.8;display:block;margin:0 auto;" />
     <p style="margin-bottom:0.25em;opacity:0.8;padding:0.25em;text-align:center;font:normal 3em 'Gara'">Thank you for your order.</p>

     <p style="padding-top:0;padding-left:1.75em;padding-right:1.75em;font-size:1.2em;font-family: 'OS Light Italic'">If you have any questions then please do not hesitate to contact us on <a href="mailto:orders@casamiento.co.uk">orders@casamiento.co.uk</a></p>
     <div style="height:200px;"></div>
  </div>
  
<%- contentFor('javascripts') %>
