{{#unless svg}}

  <div class="font_baseline_adjust_buttons">
    <div class="button_wrapper plus_font deselected" style="margin-bottom:5px">
      <div class="button_inside"><img src="/gfx/font_increase.svg" style="margin-top:25%;width:50%"/></div>
    </div>
     <div class="button_wrapper minus_font deselected">
      <div class="button_inside"><img src="/gfx/font_decrease.svg" style="margin-top:43%;width:30%"/></div>
    </div>
  </div>
  
  <div class="font_size_adjust_buttons">
     <div class="button_wrapper up_baseline deselected" style="margin-bottom:5px">
      <div class="button_inside"><img src="/gfx/baseline_up.svg" style="margin-top:35%;width:50%"/></div>
    </div>
     <div class="button_wrapper down_baseline deselected">
      <div class="button_inside"><img src="/gfx/baseline_down.svg" style="margin-top:40%;width:50%"/></div>
    </div>
  </div>
  
{{/unless}}

<div class="place_card_wrapper"> 

  {{#if svg}}
    <img src="" />  
  {{/if}}
  
  {{#unless svg}}
  
    {{#if background}}
       <img src="/products/{{product}}/attachments/display-5" />
       <div class="place_card_background_wrapper colour_0">
       {{{background}}}
       </div>
    {{/if}}
  
    {{#unless background}}    
       <img src="/products/{{product}}/attachments/display-5" class="colour_0"/>
    {{/unless}}
  
  {{/unless}}
  
  <div class="guest_wrapper">
    <div class="spacer" style="height:50%;"></div>
    <input type="text" style="font-family:{{font_family}};" value="{{name}}"></input>
  </div>
       
</div>