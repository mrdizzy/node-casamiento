{{#unless svg}}

  <div class="font_baseline_adjust_buttons">
    <div class="up_baseline deselected">&#9650</div>
    <div class="down_baseline deselected">&#9660</div>
  </div>
  
  <div class="font_size_adjust_buttons">
    <div class="plus_font deselected">+</div>
    <div class="minus_font deselected">-</div>
  </div>
  
{{/unless}}

<div class="place_card_wrapper"> 

  {{#if svg}}
    <img src="" />  
  {{/if}}
  
  {{#unless svg}}
  
    {{#if background}}
       <img src="/products/{{product}}/attachments/display-5" />
       <div class="place_card_background_wrapper colour_0">
       {{{background}}}
       </div>
    {{/if}}
  
    {{#unless background}}    
       <img src="/products/{{product}}/attachments/display-5" class="colour_0"/>
    {{/unless}}
  
  {{/unless}}
  
  <div class="guest_wrapper">
    <div class="spacer" style="height:50%;"></div>
    <input type="text" style="font-family:{{font_family}};" value="{{name}}"></input>
  </div>
       
</div>