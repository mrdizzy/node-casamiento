#section0 img:hover { border:1px solid grey; }
#monogram, #colours, #guests, #quantity { border:1px solid transparent; padding:10px; }
#monogram:hover, #colours:hover, #guests:hover, #quantity:hover { border:1px solid grey; }
#section0 { text-align:center; width:300px; margin-right:648px;}

