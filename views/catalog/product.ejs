<style type="text/css">
#slider { float:left; clear:both; }
/* SLIDER  */
/* The main bar. Give this class to whatever element you call .noUiSlider on. */
.noUiSlider {
    width:			200px;
	border:			none;
	height:			1px;
	background:		grey;
}

/* The bar connecting the dots. */
.noUi-midBar {
	height:			1px;
	z-index:		0;
	background-color:	grey;
}

/* The visible handles for the slider.
// ( .noUi-handle itself has 0 width, keep it that way. ) */
.noUi-handle > div {
	z-index: 		5;
	width:			9px;
	height:			17px;
    background-color:white;
	position:		absolute;
	top:			-8px;
	left:			-8px;
	border:			1px solid grey;
	background-image:		url('/images/sliderhandledots.png'); background-image:no-repeat;
}

/* The handles on hover. */
.noUi-handle > div:hover,
.noUi-activeHandle {
	background:		light-gray !important;
	border-color:		black !important;
    cursor: pointer;
    cursor: hand;
}

#genesis { margin:auto; clear:both; margin-bottom:10px;display:block; padding-top:10px;
border-bottom:1px solid grey; text-align:center; }

#buy { width:63px; height:53px;  background-image:url('/images/buy.png');}
