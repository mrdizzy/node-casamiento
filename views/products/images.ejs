<!doctype html>

  <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.1/underscore-min.js"></script>    
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="/javascripts/libraries/in_groups_of.js"></script>
  <script src="/javascripts/libraries/new_color_picker.js"></script>
 <link rel="stylesheet" type="text/css" href="/stylesheets/new_color_picker.css" />
<style type="text/css">
.colour_0 { background-color:red; }
.colour_1 { background-color:blue; }
 .slide { display:block; }
  
    .slide_background_container {
      position:absolute;
      width:100%;
      height:100%
    }
  
    .slide_image {
      position:relative;
      display:block;
      width:100%;
      height:100%;
    }
    body, div { margin:0; padding:0; }
</style>
<html>
<div class="slide" style="width:1000px;" id="first">
  <div style="position:relative;">
    
    <div class="slide_background_container colour_0">
      <%- product["background-2"] %>
    </div>
    
    <img srcset="http://mrdizzy.cloudant.com/test_ebay/<%=product.id%>/medium-2" class="slide_image" />
  </div>
</div>
<div class="slide" style="width:498px;float:left;">
  <div style="position:relative;">
    
    <div class="slide_background_container colour_0">
      <%-product["background-4"]%>
    </div>
    
    <img src="http://mrdizzy.cloudant.com/test_ebay/<%=product.id%>/medium-4" class="slide_image" />
  </div>
</div>
</div>
<div style="width:498px;float:left;padding-left:4px;">
<div class="slide">
  <div style="position:relative;">

    <div class="slide_background_container colour_0">
     <%- product["background-1"] %>
    </div>
    
    <img src="http://mrdizzy.cloudant.com/test_ebay/<%=product.id%>/medium-1" class="slide_image" />
  </div>
</div>

</div>
<div style="height:200px;clear:both">
<div style="width:50%;" id="colour_picker"></div>
</div>
<script>
  
  $('#colour_picker').colorPicker({
        callback: function(index, hex) {
         $('.colour_0').css("background-color", hex)
        },
        index: 0
      });
</script>

</html>