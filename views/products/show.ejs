<script src="http://cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js"></script>
<script type="text/javascript" src="/javascripts/products/show.js"></script>
<script type="text/javascript" src="/javascripts/libraries/in_groups_of.js"></script>

<script type="text/javascript" src="/javascripts/libraries/color_picker.js"></script>
<link rel="stylesheet" type="text/css" href="/stylesheets/product.css">

<link rel="stylesheet" type="text/css" href="/stylesheets/color_picker.css">

<style type="text/css">
  .step { background-color:<%= product.colours[0] %>}
  .slide_background {width:374px;height:239px;margin-bottom:1px;margin-right:1px;background-color:<%= product.colours[0] %> }
</style>


<div id="product_page">

  <div id="product_section1">
    
<!-- 

  SLIDES 1 TO 3 

-->

      <div id="slide1" class="colour_1 slide_background"><img src="/products/<%= product._id %>/attachments/medium-<%= product.attachments_order[0] %>" class="slide_image" /><% if ((typeof product["background-" + product.attachments_order[0]]) !== "undefined") {%><div class="slide_background_container">
      <%-  product["background-" + product.attachments_order[0]] %></div>
      <% } %></div>           
         
      <div id="slide2" class="colour_1 slide_background"><img src="/products/<%= product._id %>/attachments/medium-<%= product.attachments_order[1] %>" class="slide_image" /><% if ((typeof  product["background-" + product.attachments_order[1]]) !== "undefined") {%><div class="slide_background_container">
      <%-  product["background-" + product.attachments_order[1]] %></div>
      <% } %></div>
        
      <div id="slide3" class="colour_1 slide_background"><img src="/products/<%= product._id %>/attachments/medium-<%= product.attachments_order[2] %>" class="slide_image" /><% if ((typeof  product["background-" + product.attachments_order[2]]) !== "undefined") {%><div class="slide_background_container">
      <%-  product["background-" + product.attachments_order[2]] %></div>
      <% } %></div>
      
<!-- 

  PRODUCT NAME AND DESCRIPTION 

-->      
      
      <div id="slide4"><h1 class="product_name" style="text-align:center"><%= product.name %></h1>
        <div style="text-align:center;margin-bottom:1em"><img src="/gfx/ornamentalline.png" /></div>
      </div>
        
      <div id="slide5", style="width:374px;clear:both;">
      <p style="text-align:center;margin-top:1em;" class="shell">
    <img src="/gfx/shell.png" /></p>
    <h6 id="welcome_description">This simple, elegant collection is optionally adorned with a paper wrap and accompanying envelope, finished with a monogram bearing the names of you and your partner. A traditional, serif typeface emphasises the importance of your special day with authority and prestige.</h6></div>
  
<!-- 

  SLIDE 4 

-->    
      <div id="slide6" class="colour_1 slide_background"><img src="/products/<%= product._id %>/attachments/medium-<%= product.attachments_order[3] %>" class="slide_image" /><% if ((typeof  product["background-" + product.attachments_order[3]]) !== "undefined") {%><div style="width:374px;height:239px;">
      <%-  product["background-" + product.attachments_order[3]]  %></div>
      <% } %></div>           
   </div>
      
<div id="product_section0"></div>  

