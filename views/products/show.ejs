  <img src="/gfx/product_types/small/name_place_small.png" class="product_type_icon">
    <img id="slide2" srcset="/products/<%= product._id %>/attachments/large-<%= product.attachments_order[1]%> 1080px,
             /products/<%= product._id %>/attachments/medium-<%= product.attachments_order[1]%> 720px,
