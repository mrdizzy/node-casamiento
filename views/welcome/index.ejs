<style type="text/css">

.pagination {
    background:white;
	width:110px;
    height:20px;
    margin-top:6px;
    padding-left:7px;
    padding-top:8px;
    position: relative;
    top:-680px;
    left:800px;
    z-index:100;
}

.pagination li {
	float:left;
	margin:0 5px;
	list-style:none;
}

.pagination li a {
	display:block;
	width:10px;
	height:0;
	padding-top:10px;
	background-image:url(./images/pagination.png);
	background-position:0 0;
	float:left;
	overflow:hidden;
}

.pagination li.current a {
	background-position:0 -10px;
}

#nav { padding:0; }
.navbar {
