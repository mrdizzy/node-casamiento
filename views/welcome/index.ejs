$(function() {
  var body_width = $('body').width();
  if (body_width > 680) {
    var height = 92;
  }
  else {
    height = 207;
  }

  $("#slides_container").slidesjs({
    width: 360,
    height: height,

    pagination: {
      active: true
    },
    navigation: {
      active: true
    },
    play: {
      active: false,
      auto: true,
      interval: 5000
    },
    callback: {
      loaded: function(n) {
        $('#slides_spinner').hide();
      }
    }
  })

})