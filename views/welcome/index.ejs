}
.description { border: 1px solid grey; padding:20px 40px 20px 40px; margin-left: 20px; margin-right: 20px;}

.welcome { text-align:center; margin: auto; padding:10px; display:block; }

.colour_shown { margin-left:20px; padding-top:10px; text-align:left; }

td { border-top: 1px grey dotted; }

.section0 { text-align:center; float:left; width:320px; padding:0; margin:0;  }
