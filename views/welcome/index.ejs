  <script>
  
  $(function() {
  
    var counter = 0,
      location = 0;
      single_counter = 0,
      number_of_slides = <%= place_cards.length %>;
        
    // Slide width and height
    var element_width = $('#welcome_column').width();    
    $('.welcome_place_card_container').width(element_width)  
    
    var height = $('#scroll_wrapper').height();  
    $('#scroll_clipper').height(height-50)
    
    $(window).bind('resize', function() {   
      counter = 0;
      element_width = $('#welcome_column').width();
      $('.welcome_place_card_container').width(element_width)
      var height = $('#scroll_wrapper').height();
      $('#scroll_clipper').height(height-50)
      $('#scroll_wrapper').animate({scrollLeft: 0}, 0);
    })
    
    var interval_id = window.setInterval(function() {
      var current_scroll_location = $('#scroll_wrapper').scrollLeft();
      var total_width = number_of_slides * element_width;
      var location = current_scroll_location / element_width


       var location = Math.round(location);
       location = location * element_width;
       console.log(location)
      //if (single_counter < number_of_slides ) {
      if((location > current_scroll_location) || (location == 0)) {
       
         location = location + element_width;
        } else {
        
        location = location - element_width;
        }
        $('#scroll_wrapper').animate({scrollLeft: location}, 500);
        single_counter++;
      //} else {
       // clearInterval(interval_id);
      //}
    }, 5000)
    
    $('#right').click(function() {
     // single_counter++;
      location= location + element_width
      $('#scroll_wrapper').animate({scrollLeft: location}, 500);
    })
    $('#left').click(function() {
      //single_counter--;
       location= location - element_width
      $('#scroll_wrapper').animate({scrollLeft: location}, 500);
    })
    
  })
  
  </script>

