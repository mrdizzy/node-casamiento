  #loading_main_page_spinner  { display: none;  }
  
  #inner_page_container { 
    width: 90%; 
    color: #666;
  }
  .left_column { 
    width:50%;
  }
  #right_col {
    margin-left:50%;
    margin-right:0;
  }
p.bubble
{
	position: relative;
	width: 50%;
	text-align: center;
	margin: 60px auto;
	padding:1em;
	background-color: #eee;
	border-radius: 20px;
}

p.bubble:before, p.bubble:after
{
	content: ' ';
	position: absolute;
	width: 0;
	height: 0;
}

p.thought:before, p.thought:after
{
	left: -3px;
	bottom:-20px;
	width: 40px;
	height: 40px;
	background-color: #eee;
	border-radius: 28px;
}

p.thought:after
{
	width: 25px;
	height: 25px;
	left: -7px;
	bottom:-32px;
	border-radius: 18px;
}

 p.pink,
  p.pink:after,
  p.pink:before { background-color:#F5CEF5;}
